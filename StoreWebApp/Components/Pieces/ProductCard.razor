@using StoreWebApp.Models

@code {
    [Parameter] public required Product Product { get; set; }
}

<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@Product.ImageUrl" class="card-img" alt="Product Image">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Product.ProductDisplayName</h5>
                <!-- Price is in cents -->
                <p class="card-text">$@((decimal)Product.Price / 100)</p>
                <a href="/product/@Product.Id" class="btn btn-primary">View Product</a>
                <a href="#" class="btn btn-primary">Add to Cart</a>
            </div>
        </div>
    </div>
</div>